    p.setVelocities(get_vector([V(0), V(1), V(2)]));
}

extern
fn set_mass(m: real, i: size_t) -> () {
    let P = get_particle_system_from_data_struct(P_data_);
    let p = get_particle(P.addresses().get(i));
    p.setMass(m);
