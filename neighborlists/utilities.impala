}

fn @min_i32(a: i32, b: i32) -> i32 {
    if(a < b) {a} else {b}
}

fn @iterate_vectorized(begin: i32, end: i32, body: fn(i32) -> ()) -> () {
    vectorize(VECTOR_LENGTH, ALIGNMENT, begin, end, body);
}


