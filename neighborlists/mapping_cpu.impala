    let cell_sizes = get_array_of_i32(grid.cell_sizes);
    let mut buffer_ptr = 0;

    map_over_grid_subdomain(grid, begin_x, begin_y, begin_z, end_x, end_y, end_z, range, range, range, |flat_index, index| {
        let offset = get_accelerator_cell_offset(flat_index, grid);
        let cell_size = cell_sizes(flat_index);

        if(cell_size > 0) {
            buffer_ptr += copy_buffer_to_3d_arrays(
                comm_buffer, buffer_ptr,
                grid.positions_cpu, offset * sizeof[real_t](),
                cell_size * sizeof[real_t]());
        }
    });
}

