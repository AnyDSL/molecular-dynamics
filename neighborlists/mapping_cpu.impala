fn loop_accelerator(grid: Grid, body: fn(i32, i32, i32, i32, i32, &mut[i32]) -> ()) -> () {
    let cell_sizes = get_array_of_i32(grid.cell_sizes);
    let neighbors_per_cluster = get_array_of_i32(grid.neighbors_per_cluster_cpu);
    let neighborlist_capacity = grid.neighborlist_capacity;
    let neighborlists = get_neighborlists(grid);

    outer_loop_cpu(0, grid.ncells, |cell_index| {
        let cell_offset = get_accelerator_cell_offset(cell_index, grid);
        let cell_size = cell_sizes(cell_index);

        range(0, cell_size, |cluster| {
            let cluster_index = cell_offset + cluster;
            let nb_list_offset = neighborlist_capacity * cluster_index;
            let nb_list_size = neighbors_per_cluster(cluster_index);

            @@body(cluster, cluster_index, 0, nb_list_size, nb_list_offset, neighborlists);
        });
    });
}

