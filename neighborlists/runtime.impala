extern
fn md_assemble_neighbor_lists(cutoff_distance: real_t) -> () {
    if(get_cluster_size() == 1) {
        grid_assemble_neighbor_lists(&grid_, cutoff_distance, alloc_unaligned_cpu, outer_loop_cpu, middle_loop_cpu, inner_loop_cpu, assemble_particles_full_neighbor_list);
    } else {
        grid_assemble_neighbor_lists(&grid_, cutoff_distance, alloc_unaligned_cpu, outer_loop_cpu, middle_loop_cpu, inner_loop_cpu, assemble_clusters_full_neighbor_list);
    }
}

extern
fn md_compute_forces(cutoff_distance: real_t, epsilon: real_t, sigma: real_t) -> () {
    let potential = create_potential(sigma, epsilon);
    accelerator_compute_forces(accelerator_grid_, cutoff_distance*cutoff_distance, potential);
}

