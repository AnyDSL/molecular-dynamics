    initialize_grid(masses, positions, velocities, nparticles, &mut grid_, alloc_unaligned_cpu);
    initialize_grid_comm(grid_, &mut comm_offsets_, world_size, world_rank);

    let capacity = nparticles / 4 + 128;
    accelerator_grid_ = allocate_accelerator_grid(grid_.nx, grid_.ny, grid_.nz, capacity, cluster_size, capacity * 64); 

    grid_.nparticles
