        max: [rank_max(0), rank_max(1), rank_max(2)],
    };

    let cluster_size = get_cluster_size();
    //let rank_aabb = get_node_bounding_box(
    //  world_size, world_rank, cell_spacing, aabb);


    /*
    print_i32(world_rank);
