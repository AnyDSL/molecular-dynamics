    print_string("}\n");

    print_i32(world_rank);
    print_string("> aabb.max = {");
    print_f64(rank_aabb.max(0));
    print_string(", ");
    print_f64(rank_aabb.max(1));
    print_string(", ");
    print_f64(rank_aabb.max(2));
    print_string("}\n");
    */

    grid_ = allocate_grid(
      rank_aabb, cell_spacing, cell_capacity, cluster_size, alloc_unaligned_cpu);

    /*
    print_i32(world_rank);
    print_string("> nx, ny, nz = ");
